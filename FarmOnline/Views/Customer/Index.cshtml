@model IEnumerable<Product>
@{
    ViewData["Title"] = "Customer Home";
    Layout = "/Views/Shared/_CustomerLayout.cshtml";
}

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.Image" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                        </div>
                        <div class="pl-1">
                            <p class="card-title text-dark opacity-75 text-center"> <span>@product.Price.ToString("c") </span></p>
                        </div>
                        <div class="pl-1">
                            <p class="card-title text-dark opacity-75 text-center"> <span>@product.Price.ToString("c") </span></p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <form asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <button type="submit" class="btn btn-success bg-gradient border-0 form-control">
                                    Buy Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

