@model FarmOnline.Models.ViewModel.OrderComfVM

@{
    ViewData["Title"] = "Order Confirmation";

    Layout = "/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Order Confirmation Card -->
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded">
                <div class="card-header text-center bg-primary text-white">
                    <h3><i class="fas fa-check-circle"></i> Order Confirmed</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-success">Your order has been successfully placed!</h4>

                    <!-- Order Summary -->
                    <div class="mb-4">
                        <p><strong>Order ID:</strong> @Model.OrderHeader.Id</p>
                        <p><strong>Order Date:</strong> @Model.OrderHeader.OrderDate.ToString("dd MMM yyyy")</p>
                        <p><strong>Shipping Date:</strong> @Model.OrderHeader.ShippingDate.ToString("dd MMM yyyy")</p>
                        <p><strong>Total Amount:</strong> @Model.OrderHeader.OrderTotal.ToString("c")</p>
                    </div>

                    <!-- Order Details -->
                    <h5>Order Details</h5>
                    <div class="list-group mb-4">
                        @foreach (var item in Model.OrderDetails)

                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6>@item.Product.Name</h6>
                                    <p class="mb-0">Price: @item.Price.ToString("c")</p>
                                    <p class="mb-0">Quantity: @item.Count</p>
                                </div>
                                <span class="badge bg-secondary">@((item.Count * item.Price).ToString("c"))</span>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-controller="Customer" class="btn btn-primary"><i class="fas fa-store"></i> Continue Shopping</a>
                        <a href="@Url.Action("OrderHistory", "Customer")" class="btn btn-outline-dark"><i class="fas fa-history"></i> View Order History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

