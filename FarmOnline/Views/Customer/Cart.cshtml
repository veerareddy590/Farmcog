@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Customer Home";
    Layout = "/Views/Shared/_CustomerLayout.cshtml";
}


<div class="container">
    <h2>Your Cart</h2>
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <h5 class="card-title">@item.Product.Name</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <p class="card-text">Price: @item.Product.Price</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <p class="card-text">Total: @(item.count * item.Product.Price)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <form asp-action="UpdateCart" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" name="action" value="decrease" class="btn btn-secondary">-</button>
                            <span>@item.count</span>
                            <button type="submit" name="action" value="increase" class="btn btn-secondary">+</button>
                        </form>
                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card-footer bg-white border-0">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <ul class="list-group mb-4">
                    <li class="d-flex justify-content-between align-items-center">
                        <h5 class="text-dark fw-semibold text-uppercase">Total (USD)</h5>
                        <span class="text-dark fw-semibold">
                            @Model.Sum(item => item.count * item.Product.Price).ToString("c")
                        </span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 offset-md-5">
                <a asp-controller="Customer" asp-action="Address" class="btn btn-primary border-0 bg-gradient w-100 py-2">Continue</a>
            </div>
        </div>
    </div>
</div>