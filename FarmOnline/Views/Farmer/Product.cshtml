@model List<Product>

@{
    ViewData["Title"] = "Upload Product";
    Layout = "/Views/Shared/farmheader.cshtml";
}


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Farmer" asp-action="UploadProduct" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Upload Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                       Product Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Image
                    </th>
                    <th>options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Description</td>
                        <td>@obj.Quantity</td>
                        <td>@obj.Price</td>
                        <td><img src="@obj.Image" width="30%" height="30%"/></td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Farmer" asp-action="EditProduct" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Farmer" asp-action="DeleteProduct" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

