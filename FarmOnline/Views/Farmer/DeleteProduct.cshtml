@model FarmOnline.Models.ViewModel.ProductVM
@{
    ViewData["Title"] = "Delete Product";
    Layout = "/Views/Shared/farmheader.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h3>Delete Product</h3>
            <img src="@Model.Product.Image" class="img-thumbnail" style="max-width: 100px;" alt="Product Image" />
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Product.ProductId" hidden />
                <input asp-for="Product.Image" hidden />
                <div class="mb-3">
                    <label asp-for="Product.Name" class="form-label fw-bold">Product Name</label>
                    <input asp-for="Product.Name" class="form-control" readonly />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Product.Description" class="form-control" rows="3" readonly></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Product.Quantity" class="form-label fw-bold">Quantity</label>
                        <input asp-for="Product.Quantity" class="form-control" readonly />
                        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Product.Price" class="form-label fw-bold">Price</label>
                        <input asp-for="Product.Price" class="form-control" readonly />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.CategoryId" class="form-label fw-bold">Category</label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select" disabled>
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a class="btn btn-secondary" asp-controller="Farmer" asp-action="Product">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>