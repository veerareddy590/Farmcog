@model IEnumerable<FarmOnline.Models.ViewModel.OrderComfVM>


@{
    ViewData["Title"] = "SalesHistory";
    Layout = "/Views/Shared/farmheader.cshtml";
}

<h2>Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Products</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderHeader.Id</td>
                <td>@order.OrderHeader.OrderDate</td>
                <td>@order.OrderHeader.User.UserName</td>
                <td>@order.OrderHeader.User.Email</td>
                <td>
                    <ul>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <li>@detail.Product.Name - @detail.Count x @detail.Price</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>